<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/lay_one"
            android:background="#FD5041">

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Name"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="30sp"-->
<!--                    android:layout_marginTop="30dp"-->
<!--                    android:layout_marginLeft="30dp"-->
<!--                    android:textStyle="bold"/>-->

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/logo_design_four"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/lay_one"
            android:id="@+id/view1"
            android:background="@drawable/wave__3_"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reltv_cards"
            android:layout_marginHorizontal="20dp"
            android:padding="20dp"
            android:layout_centerVertical="true">

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:id="@+id/tile_request_blood"
                    android:background="@drawable/tiles_bg"
                    android:elevation="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_alignParentLeft="true">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/img_msg"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="25dp"
                            android:src="@drawable/message"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="67dp"
                            android:src="@drawable/blood"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Request Blood"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/myRed"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:id="@+id/tile_blood_bank"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/tiles_bg"
                    android:elevation="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/blood_bank"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blood Bank"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/myRed"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"/>

                </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reltv_cards2"
            android:layout_marginHorizontal="20dp"
            android:padding="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/reltv_cards">

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:id="@+id/tile_donate_blood"
                    android:background="@drawable/tiles_bg"
                    android:elevation="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_alignParentLeft="true">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/blood_bag__1_"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Donate Blood"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/myRed"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:id="@+id/tile_settings"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/tiles_bg"
                    android:elevation="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/settings__1_"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/myRed"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"/>

                </RelativeLayout>

        </RelativeLayout>

                </LinearLayout>

        </androidx.core.widget.NestedScrollView>

</RelativeLayout>