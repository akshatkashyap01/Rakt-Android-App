<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/dialog_bg"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/doc_img"
            android:layout_width="137dp"
            android:layout_height="133dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/questionnaire"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are your sure want to submit your details ?"
            android:textSize="16sp"
            android:id="@+id/doc_txt"
            android:gravity="center"
            android:layout_below="@id/doc_img"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/doc_txt"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="10dp"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/yes_btn"
                android:background="@drawable/done_btn_bg"
                android:backgroundTint="#5DAC02"
                android:hint="Yes"
                android:layout_marginBottom="5dp"
                android:textColorHint="@color/white"
                android:textSize="15sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/no_btn"
                android:layout_toRightOf="@id/yes_btn"
                android:background="@drawable/done_btn_bg"
                android:hint="No"
                android:layout_marginBottom="5dp"
                android:textColorHint="@color/white"
                android:textSize="15sp"/>

        </LinearLayout>
        />


    </RelativeLayout>


</RelativeLayout>